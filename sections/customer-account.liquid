<div class="customer-account">
  <div class="customer-account__container">
    <div class="customer-account__header">
      <h1 class="customer-account__title">{{ 'customer.account.title' | t }}</h1>
      <p class="customer-account__welcome">
        {{ 'customer.account.welcome' | t: first_name: customer.first_name }}
      </p>
    </div>

    <div class="customer-account__content">
      <div class="customer-account__sidebar">
        <nav class="customer-account__nav">
          <ul class="customer-account__nav-list">
            <li class="customer-account__nav-item">
              <a href="#profile" class="customer-account__nav-link customer-account__nav-link--active" data-tab="profile">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2"/>
                  <circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="2"/>
                </svg>
                {{ 'customer.account.profile' | t }}
              </a>
            </li>
            <li class="customer-account__nav-item">
              <a href="#orders" class="customer-account__nav-link" data-tab="orders">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                  <path d="M9 11H5a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2h-4" stroke="currentColor" stroke-width="2"/>
                  <path d="M9 7l3-3 3 3" stroke="currentColor" stroke-width="2"/>
                  <path d="M12 4v14" stroke="currentColor" stroke-width="2"/>
                </svg>
                {{ 'customer.account.orders' | t }}
              </a>
            </li>
            <li class="customer-account__nav-item">
              <a href="#addresses" class="customer-account__nav-link" data-tab="addresses">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" stroke="currentColor" stroke-width="2"/>
                  <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2"/>
                </svg>
                {{ 'customer.account.addresses' | t }}
              </a>
            </li>
            <li class="customer-account__nav-item">
              <a href="{{ routes.account_logout_url }}" class="customer-account__nav-link customer-account__nav-link--logout">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                  <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" stroke="currentColor" stroke-width="2"/>
                  <polyline points="16,17 21,12 16,7" stroke="currentColor" stroke-width="2"/>
                  <line x1="21" y1="12" x2="9" y2="12" stroke="currentColor" stroke-width="2"/>
                </svg>
                {{ 'customer.account.logout' | t }}
              </a>
            </li>
          </ul>
        </nav>
      </div>

      <div class="customer-account__main">
        <!-- Profile Tab -->
        <div id="profile-tab" class="customer-account__tab customer-account__tab--active">
          <div class="customer-account__section">
            <h2 class="customer-account__section-title">{{ 'customer.account.profile_info' | t }}</h2>
            
            <div class="customer-profile">
              <div class="customer-profile__field">
                <label class="customer-profile__label">{{ 'customer.account.first_name' | t }}</label>
                <div class="customer-profile__value">{{ customer.first_name | default: '—' }}</div>
              </div>
              
              <div class="customer-profile__field">
                <label class="customer-profile__label">{{ 'customer.account.last_name' | t }}</label>
                <div class="customer-profile__value">{{ customer.last_name | default: '—' }}</div>
              </div>
              
              <div class="customer-profile__field">
                <label class="customer-profile__label">{{ 'customer.account.email' | t }}</label>
                <div class="customer-profile__value">{{ customer.email }}</div>
              </div>
              
              <div class="customer-profile__field">
                <label class="customer-profile__label">{{ 'customer.account.phone' | t }}</label>
                <div class="customer-profile__value">{{ customer.phone | default: '—' }}</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Orders Tab -->
        <div id="orders-tab" class="customer-account__tab">
          <div class="customer-account__section">
            <h2 class="customer-account__section-title">{{ 'customer.account.order_history' | t }}</h2>
            
            {% if customer.orders.size > 0 %}
              <div class="customer-orders">
                {% for order in customer.orders %}
                  <div class="customer-order">
                    <div class="customer-order__header">
                      <div class="customer-order__info">
                        <h3 class="customer-order__number">
                          {{ 'customer.account.order_number' | t: number: order.name }}
                        </h3>
                        <div class="customer-order__date">
                          {{ order.created_at | date: '%B %d, %Y' }}
                        </div>
                      </div>
                      <div class="customer-order__status customer-order__status--{{ order.financial_status }}">
                        {{ order.financial_status | capitalize }}
                      </div>
                    </div>
                    
                    <div class="customer-order__details">
                      <div class="customer-order__total">
                        Total: {{ order.total_price | money }}
                      </div>
                      <a href="{{ order.customer_url }}" class="btn btn--outline btn--small">
                        {{ 'customer.account.view_order' | t }}
                      </a>
                    </div>
                  </div>
                {% endfor %}
              </div>
            {% else %}
              <div class="customer-account__empty">
                <p>{{ 'customer.account.no_orders' | t }}</p>
                <a href="{{ routes.collections_url }}" class="btn btn--primary">
                  {{ 'customer.account.start_shopping' | t }}
                </a>
              </div>
            {% endif %}
          </div>
        </div>

        <!-- Addresses Tab -->
        <div id="addresses-tab" class="customer-account__tab">
          <div class="customer-account__section">
            <h2 class="customer-account__section-title">{{ 'customer.account.address_book' | t }}</h2>
            
            {% if customer.addresses.size > 0 %}
              <div class="customer-addresses">
                {% for address in customer.addresses %}
                  <div class="customer-address">
                    {% if address == customer.default_address %}
                      <div class="customer-address__default">{{ 'customer.account.default_address' | t }}</div>
                    {% endif %}
                    
                    <div class="customer-address__content">
                      <div class="customer-address__name">{{ address.first_name }} {{ address.last_name }}</div>
                      <div class="customer-address__details">
                        {% if address.company != blank %}
                          <div>{{ address.company }}</div>
                        {% endif %}
                        <div>{{ address.address1 }}</div>
                        {% if address.address2 != blank %}
                          <div>{{ address.address2 }}</div>
                        {% endif %}
                        <div>{{ address.city }}, {{ address.province }} {{ address.zip }}</div>
                        <div>{{ address.country }}</div>
                        {% if address.phone != blank %}
                          <div>{{ address.phone }}</div>
                        {% endif %}
                      </div>
                    </div>
                    
                    <div class="customer-address__actions">
                      <a href="{{ routes.account_addresses_url }}/{{ address.id }}" class="btn btn--outline btn--small">
                        {{ 'customer.account.edit_address' | t }}
                      </a>
                    </div>
                  </div>
                {% endfor %}
              </div>
            {% else %}
              <div class="customer-account__empty">
                <p>{{ 'customer.account.no_addresses' | t }}</p>
                <a href="{{ routes.account_addresses_url }}" class="btn btn--primary">
                  {{ 'customer.account.add_address' | t }}
                </a>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .customer-account {
    padding: 60px 20px;
    background-color: var(--color-background);
    min-height: 70vh;
  }

  .customer-account__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .customer-account__header {
    margin-bottom: 40px;
    text-align: center;
  }

  .customer-account__title {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--color-foreground);
  }

  .customer-account__welcome {
    font-size: 1.125rem;
    color: var(--color-foreground-secondary);
    margin: 0;
  }

  .customer-account__content {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 40px;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .customer-account__sidebar {
    background-color: #f8fafc;
    padding: 32px 0;
  }

  .customer-account__nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .customer-account__nav-item {
    margin-bottom: 8px;
  }

  .customer-account__nav-link {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 32px;
    color: var(--color-foreground-secondary);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
  }

  .customer-account__nav-link:hover {
    background-color: #e2e8f0;
    color: var(--color-foreground);
  }

  .customer-account__nav-link--active {
    background-color: var(--color-primary);
    color: white;
  }

  .customer-account__nav-link--active:hover {
    background-color: var(--color-primary);
    color: white;
  }

  .customer-account__nav-link--logout {
    color: #dc2626;
  }

  .customer-account__nav-link--logout:hover {
    background-color: #fef2f2;
    color: #dc2626;
  }

  .customer-account__main {
    padding: 32px;
  }

  .customer-account__tab {
    display: none;
  }

  .customer-account__tab--active {
    display: block;
  }

  .customer-account__section {
    margin-bottom: 32px;
  }

  .customer-account__section-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 24px;
    color: var(--color-foreground);
  }

  /* Profile Styles */
  .customer-profile {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
  }

  .customer-profile__field {
    border-bottom: 1px solid #e5e7eb;
    padding-bottom: 16px;
  }

  .customer-profile__label {
    display: block;
    font-weight: 500;
    color: var(--color-foreground-secondary);
    font-size: 0.875rem;
    margin-bottom: 4px;
  }

  .customer-profile__value {
    font-size: 1rem;
    color: var(--color-foreground);
  }

  /* Orders Styles */
  .customer-orders {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .customer-order {
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 20px;
  }

  .customer-order__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 16px;
  }

  .customer-order__number {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin: 0 0 4px 0;
  }

  .customer-order__date {
    font-size: 0.875rem;
    color: var(--color-foreground-secondary);
  }

  .customer-order__status {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .customer-order__status--paid {
    background-color: #d1fae5;
    color: #065f46;
  }

  .customer-order__status--pending {
    background-color: #fed7aa;
    color: #9a3412;
  }

  .customer-order__details {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .customer-order__total {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-foreground);
  }

  /* Addresses Styles */
  .customer-addresses {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
  }

  .customer-address {
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 20px;
    position: relative;
  }

  .customer-address__default {
    position: absolute;
    top: -8px;
    left: 16px;
    background-color: var(--color-primary);
    color: white;
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .customer-address__name {
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--color-foreground);
  }

  .customer-address__details {
    font-size: 0.875rem;
    line-height: 1.4;
    color: var(--color-foreground-secondary);
    margin-bottom: 16px;
  }

  .customer-address__actions {
    text-align: right;
  }

  /* Empty State */
  .customer-account__empty {
    text-align: center;
    padding: 40px;
    color: var(--color-foreground-secondary);
  }

  .customer-account__empty p {
    margin-bottom: 24px;
    font-size: 1.125rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .customer-account__content {
      grid-template-columns: 1fr;
      gap: 0;
    }

    .customer-account__sidebar {
      padding: 16px 0;
    }

    .customer-account__nav-link {
      padding: 12px 20px;
    }

    .customer-account__main {
      padding: 20px;
    }

    .customer-profile {
      grid-template-columns: 1fr;
    }

    .customer-order__header {
      flex-direction: column;
      gap: 12px;
      align-items: flex-start;
    }

    .customer-order__details {
      flex-direction: column;
      gap: 16px;
      align-items: flex-start;
    }

    .customer-addresses {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

{% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    // Tab functionality
    const tabLinks = document.querySelectorAll('[data-tab]');
    const tabs = document.querySelectorAll('.customer-account__tab');

    tabLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        if (this.getAttribute('href').startsWith('#')) {
          e.preventDefault();
          
          const targetTab = this.getAttribute('data-tab');
          
          // Remove active class from all links and tabs
          tabLinks.forEach(l => l.classList.remove('customer-account__nav-link--active'));
          tabs.forEach(t => t.classList.remove('customer-account__tab--active'));
          
          // Add active class to clicked link and corresponding tab
          this.classList.add('customer-account__nav-link--active');
          document.getElementById(targetTab + '-tab').classList.add('customer-account__tab--active');
          
          // Update URL hash
          window.history.replaceState(null, null, '#' + targetTab);
        }
      });
    });

    // Handle initial hash
    const hash = window.location.hash.replace('#', '');
    if (hash && document.getElementById(hash + '-tab')) {
      tabLinks.forEach(l => l.classList.remove('customer-account__nav-link--active'));
      tabs.forEach(t => t.classList.remove('customer-account__tab--active'));
      
      document.querySelector(`[data-tab="${hash}"]`).classList.add('customer-account__nav-link--active');
      document.getElementById(hash + '-tab').classList.add('customer-account__tab--active');
    }
  });
{% endjavascript %}

