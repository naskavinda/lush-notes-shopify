    },
    {
      "type": "checkbox",
      "id": "show_order_history",
      "label": "t:sections.customer_account.settings.show_order_history.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_address_book",
      "label": "t:sections.customer_account.settings.show_address_book.label",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "t:sections.customer_account.presets.customer_account.name"
    }
  ]
}
{% endschema %}