<!-- Olfactive Vibe Section -->
<section class="olfactive-vibe">
  <div class="olfactive-vibe__container">
    <div class="olfactive-vibe__header">
      {% if section.settings.title != blank %}
        <h2 class="olfactive-vibe__title">{{ section.settings.title }}</h2>
      {% endif %}
      
      {% if section.settings.subtitle != blank %}
        <p class="olfactive-vibe__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="olfactive-vibe__categories">
      {% for block in section.blocks %}
        <div class="olfactive-category" {{ block.shopify_attributes }}>
          {% if block.settings.category_link %}
            <a href="{{ block.settings.category_link }}" class="olfactive-category__link" aria-label="Visit {{ block.settings.title }} collection">
          {% endif %}
          
          <div class="olfactive-category__image">
            {% liquid
              assign collection_handle = block.settings.category_link | remove: '/collections/' | split: '?' | first | split: '#' | first | strip
              assign collection_obj = collections[collection_handle]
              
              comment
                If no collection found via URL, try using the title as handle
                Example: "Pour Homme" becomes "pour-homme"
              endcomment
              
              if collection_obj == blank
                assign collection_handle = block.settings.title | handleize
                assign collection_obj = collections[collection_handle]
              endif
            %}
            
            {% if block.settings.image %}
              {{ block.settings.image | image_url: width: 600, height: 600, crop: 'center' | image_tag: alt: block.settings.title, loading: 'lazy', class: 'olfactive-category__img' }}
            {% elsif collection_obj and collection_obj.featured_image %}
              {{ collection_obj.featured_image | image_url: width: 600, height: 600, crop: 'center' | image_tag: alt: collection_obj.title, loading: 'lazy', class: 'olfactive-category__img' }}
            {% elsif collection_obj and collection_obj.products.size > 0 and collection_obj.products.first.featured_image %}
              {{ collection_obj.products.first.featured_image | image_url: width: 600, height: 600, crop: 'center' | image_tag: alt: collection_obj.title, loading: 'lazy', class: 'olfactive-category__img' }}
            {% else %}
              <div class="olfactive-category__placeholder">
                {{ 'collection-' | append: forloop.index | placeholder_svg_tag }}
              </div>
            {% endif %}
            <div class="olfactive-category__overlay"></div>
          </div>
          
          <div class="olfactive-category__content">
            {% if block.settings.title %}
              <h3 class="olfactive-category__title">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.subtitle %}
              <p class="olfactive-category__subtitle">{{ block.settings.subtitle }}</p>
            {% endif %}
            
            {% if block.settings.description %}
              <p class="olfactive-category__description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
          
          {% if block.settings.category_link %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .olfactive-vibe {
    padding: 5rem 0 2rem 0;
    background-color: #fff;
  }

  .olfactive-vibe__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .olfactive-vibe__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .olfactive-vibe__title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 1rem;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    letter-spacing: -0.025em;
  }

  .olfactive-vibe__subtitle {
    font-size: 1.125rem;
    color: #666;
    max-width: 650px;
    margin: 0 auto;
    line-height: 1.6;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-weight: 400;
    letter-spacing: 0.025em;
  }

  .olfactive-vibe__categories {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .olfactive-category {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    background-color: #000;
    transition: all 0.4s ease;
    cursor: pointer;
    min-height: 400px;
    aspect-ratio: 1;
    display: block;
  }

  .olfactive-category:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .olfactive-category__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .olfactive-category__image img,
  .olfactive-category__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .olfactive-category:hover .olfactive-category__image img,
  .olfactive-category:hover .olfactive-category__img {
    transform: scale(1.05);
  }

  .olfactive-category__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .olfactive-category__placeholder svg {
    width: 120px;
    height: 120px;
    opacity: 0.4;
    filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.3));
  }

  /* Enhanced placeholder backgrounds for each category */
  .olfactive-category:nth-child(1) .olfactive-category__placeholder {
    background: linear-gradient(135deg, #8B4513 0%, #A0522D 50%, #CD853F 100%);
  }

  .olfactive-category:nth-child(2) .olfactive-category__placeholder {
    background: linear-gradient(135deg, #2C3E50 0%, #4682B4 50%, #5F9EA0 100%);
  }

  .olfactive-category:nth-child(3) .olfactive-category__placeholder {
    background: linear-gradient(135deg, #8B008B 0%, #9370DB 50%, #DA70D6 100%);
  }

  .olfactive-category__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.4) 0%,
      rgba(0, 0, 0, 0.2) 50%,
      rgba(0, 0, 0, 0.6) 100%
    );
    z-index: 2;
    transition: background 0.4s ease;
  }

  .olfactive-category:hover .olfactive-category__overlay {
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.5) 0%,
      rgba(0, 0, 0, 0.3) 50%,
      rgba(0, 0, 0, 0.7) 100%
    );
  }

  .olfactive-category__content {
    position: absolute;
    top: 2rem;
    left: 2rem;
    right: 2rem;
    color: #fff;
    z-index: 3;
    transition: all 0.4s ease;
  }

  .olfactive-category__title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    letter-spacing: -0.025em;
  }

  .olfactive-category__title::after {
    content: "™";
    font-size: 0.7em;
    vertical-align: super;
    opacity: 0.8;
  }

  .olfactive-category__subtitle {
    font-size: 0.9rem;
    line-height: 1.4;
    margin-bottom: 1rem;
    opacity: 0.9;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-weight: 400;
    letter-spacing: 0.025em;
  }

  .olfactive-category__description {
    font-size: 0.85rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
    opacity: 0.85;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-weight: 400;
    letter-spacing: 0.025em;
  }

  .olfactive-category__link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 4;
    text-decoration: none;
    color: inherit;
    display: block;
    border-radius: 16px;
    transition: all 0.3s ease;
  }

  .olfactive-category__link:hover,
  .olfactive-category__link:focus {
    outline: 3px solid #ff6b35;
    outline-offset: 2px;
  }

  .olfactive-category__link:active {
    transform: scale(0.98);
  }

  /* Specific styling for different categories when no image is present */
  .olfactive-category:nth-child(1):not(:has(.olfactive-category__image img)) {
    background: linear-gradient(135deg, #8B4513 0%, #A0522D 50%, #CD853F 100%);
  }

  .olfactive-category:nth-child(2):not(:has(.olfactive-category__image img)) {
    background: linear-gradient(135deg, #2C3E50 0%, #4682B4 50%, #5F9EA0 100%);
  }

  .olfactive-category:nth-child(3):not(:has(.olfactive-category__image img)) {
    background: linear-gradient(135deg, #8B008B 0%, #9370DB 50%, #DA70D6 100%);
  }

  /* Fallback for browsers that don't support :has() */
  .olfactive-category:nth-child(1) {
    background: linear-gradient(135deg, #8B4513 0%, #A0522D 50%, #CD853F 100%);
  }

  .olfactive-category:nth-child(2) {
    background: linear-gradient(135deg, #2C3E50 0%, #4682B4 50%, #5F9EA0 100%);
  }

  .olfactive-category:nth-child(3) {
    background: linear-gradient(135deg, #8B008B 0%, #9370DB 50%, #DA70D6 100%);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .olfactive-vibe {
      padding: 2.5rem 0 1rem 0;
    }

    .olfactive-vibe__container {
      padding: 0 1rem;
    }

    .olfactive-vibe__header {
      margin-bottom: 2.5rem;
      padding: 0 0.5rem;
    }

    .olfactive-vibe__title {
      font-size: clamp(1.75rem, 6vw, 2.25rem);
      margin-bottom: 0.75rem;
    }

    .olfactive-vibe__subtitle {
      font-size: 1rem;
      line-height: 1.5;
    }

    .olfactive-vibe__categories {
      grid-template-columns: 1fr;
      gap: 1.25rem;
      max-width: 100%;
    }

    .olfactive-category {
      min-height: 280px;
      aspect-ratio: 16/9;
      border-radius: 12px;
    }

    .olfactive-category__content {
      top: 1.25rem;
      left: 1.25rem;
      right: 1.25rem;
    }

    .olfactive-category__title {
      font-size: 1.5rem;
      margin-bottom: 0.25rem;
    }

    .olfactive-category__subtitle {
      font-size: 0.85rem;
      margin-bottom: 0.5rem;
    }

    .olfactive-category__description {
      font-size: 0.8rem;
      margin-bottom: 1rem;
    }
  }

  @media (max-width: 480px) {
    .olfactive-vibe {
      padding: 2rem 0 0.5rem 0;
    }

    .olfactive-vibe__container {
      padding: 0 0.75rem;
    }

    .olfactive-vibe__header {
      margin-bottom: 2rem;
      padding: 0;
    }

    .olfactive-vibe__title {
      font-size: 1.6rem;
    }

    .olfactive-vibe__subtitle {
      font-size: 0.9rem;
    }

    .olfactive-vibe__categories {
      gap: 1rem;
    }

    .olfactive-category {
      min-height: 240px;
      border-radius: 10px;
    }

    .olfactive-category__content {
      top: 1rem;
      left: 1rem;
      right: 1rem;
    }

    .olfactive-category__title {
      font-size: 1.3rem;
    }

    .olfactive-category__subtitle {
      font-size: 0.8rem;
    }

    .olfactive-category__description {
      font-size: 0.75rem;
      line-height: 1.4;
    }
  }
{% endstylesheet %}

