<!-- Olfactive Vibe Section -->
<section class="olfactive-vibe">
  <div class="olfactive-vibe__container">
    <div class="olfactive-vibe__header">
      {% if section.settings.title != blank %}
        <h2 class="olfactive-vibe__title">{{ section.settings.title }}</h2>
      {% endif %}
      
      {% if section.settings.subtitle != blank %}
        <p class="olfactive-vibe__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="olfactive-vibe__categories">
      {% for block in section.blocks %}
        <div class="olfactive-category" {{ block.shopify_attributes }}>
          <div class="olfactive-category__image">
            {% if block.settings.image %}
              {{ block.settings.image | image_url: width: 600 | image_tag: alt: block.settings.title, loading: 'lazy' }}
            {% else %}
              <div class="olfactive-category__placeholder">
                {{ 'collection-' | append: forloop.index | placeholder_svg_tag }}
              </div>
            {% endif %}
            <div class="olfactive-category__overlay"></div>
          </div>

          {% if block.settings.category_link %}
            <a href="{{ block.settings.category_link }}" class="olfactive-category__link">
          {% endif %}
          
          <div class="olfactive-category__content">
            {% if block.settings.title %}
              <h3 class="olfactive-category__title">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.subtitle %}
              <p class="olfactive-category__subtitle">{{ block.settings.subtitle }}</p>
            {% endif %}
            
            {% if block.settings.description %}
              <p class="olfactive-category__description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
          
          {% if block.settings.category_link %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .olfactive-vibe {
    padding: 5rem 0;
    background-color: #fff;
  }

  .olfactive-vibe__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .olfactive-vibe__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .olfactive-vibe__title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 1rem;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    letter-spacing: -0.025em;
  }

  .olfactive-vibe__subtitle {
    font-size: 1.125rem;
    color: #666;
    max-width: 650px;
    margin: 0 auto;
    line-height: 1.6;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-weight: 400;
    letter-spacing: 0.025em;
  }

  .olfactive-vibe__categories {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .olfactive-category {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    background-color: #000;
    transition: all 0.4s ease;
    cursor: pointer;
    min-height: 400px;
    aspect-ratio: 1;
  }

  .olfactive-category:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .olfactive-category__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .olfactive-category__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .olfactive-category:hover .olfactive-category__image img {
    transform: scale(1.05);
  }

  .olfactive-category__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .olfactive-category__placeholder svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .olfactive-category__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.4) 0%,
      rgba(0, 0, 0, 0.2) 50%,
      rgba(0, 0, 0, 0.6) 100%
    );
    z-index: 2;
    transition: background 0.4s ease;
  }

  .olfactive-category:hover .olfactive-category__overlay {
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.5) 0%,
      rgba(0, 0, 0, 0.3) 50%,
      rgba(0, 0, 0, 0.7) 100%
    );
  }

  .olfactive-category__content {
    position: absolute;
    top: 2rem;
    left: 2rem;
    right: 2rem;
    color: #fff;
    z-index: 3;
    transition: all 0.4s ease;
  }

  .olfactive-category__title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    letter-spacing: -0.025em;
  }

  .olfactive-category__title::after {
    content: "â„¢";
    font-size: 0.7em;
    vertical-align: super;
    opacity: 0.8;
  }

  .olfactive-category__subtitle {
    font-size: 0.9rem;
    line-height: 1.4;
    margin-bottom: 1rem;
    opacity: 0.9;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-weight: 400;
    letter-spacing: 0.025em;
  }

  .olfactive-category__description {
    font-size: 0.85rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
    opacity: 0.85;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-weight: 400;
    letter-spacing: 0.025em;
  }

  .olfactive-category__link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 4;
    text-decoration: none;
    color: inherit;
  }

  /* Specific styling for different categories */
  .olfactive-category:nth-child(1) {
    background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
  }

  .olfactive-category:nth-child(2) {
    background: linear-gradient(135deg, #4682B4 0%, #5F9EA0 100%);
  }

  .olfactive-category:nth-child(3) {
    background: linear-gradient(135deg, #2F4F4F 0%, #708090 100%);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .olfactive-vibe {
      padding: 3rem 0;
    }

    .olfactive-vibe__container {
      padding: 0 1rem;
    }

    .olfactive-vibe__title {
      font-size: 2rem;
    }

    .olfactive-vibe__categories {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .olfactive-category {
      min-height: 350px;
      aspect-ratio: 1.2;
    }

    .olfactive-category__content {
      top: 1.5rem;
      left: 1.5rem;
      right: 1.5rem;
    }

    .olfactive-category__title {
      font-size: 1.6rem;
    }
  }

  @media (max-width: 480px) {
    .olfactive-vibe__header {
      margin-bottom: 2rem;
    }

    .olfactive-category {
      min-height: 250px;
    }

    .olfactive-category__content {
      padding: 1rem;
    }

    .olfactive-category__title {
      font-size: 1.3rem;
    }

    .olfactive-category__description {
      font-size: 0.9rem;
    }
  }
{% endstylesheet %}

