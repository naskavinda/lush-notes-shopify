<div class="return-policy">
  <div class="return-policy__hero">
    <div class="return-policy__container">
      <div class="return-policy__breadcrumb">
        <a href="{{ routes.root_url }}" class="return-policy__back-link">
          ‚Üê {{ section.settings.back_text | default: "Back to Home" }}
        </a>
      </div>
      <h1 class="return-policy__title">{{ section.settings.title | default: "Return Policy" }}</h1>
      <p class="return-policy__subtitle">{{ section.settings.subtitle | default: "Your satisfaction is our priority" }}</p>
    </div>
  </div>

  <div class="return-policy__content">
    <div class="return-policy__container">
      
      <!-- 2-Week Return Window -->
      <section class="return-policy__section">
        <h2 class="return-policy__section-title">{{ section.settings.return_window_title | default: "2-Week Return Window" }}</h2>
        <p class="return-policy__text">{{ section.settings.return_window_text | default: "At Lush Notes, we offer a 2-week return policy for eligible items. Returns must be initiated within 14 days of your purchase date." }}</p>
      </section>

      <!-- Eligible for Return -->
      <section class="return-policy__section">
        <h2 class="return-policy__section-title">{{ section.settings.eligible_title | default: "Eligible for Return" }}</h2>
        <ul class="return-policy__list return-policy__list--eligible">
          <li class="return-policy__list-item">
            <span class="return-policy__list-icon">‚úÖ</span>
            <div class="return-policy__list-content">
              <strong>{{ section.settings.eligible_1_title | default: "Unopened perfumes" }}</strong>
              <span>{{ section.settings.eligible_1_text | default: "in their original packaging with all seals intact" }}</span>
            </div>
          </li>
          <li class="return-policy__list-item">
            <span class="return-policy__list-icon">‚úÖ</span>
            <div class="return-policy__list-content">
              <strong>{{ section.settings.eligible_2_title | default: "Unused products" }}</strong>
              <span>{{ section.settings.eligible_2_text | default: "that have not been opened or tested" }}</span>
            </div>
          </li>
          <li class="return-policy__list-item">
            <span class="return-policy__list-icon">‚úÖ</span>
            <div class="return-policy__list-content">
              <strong>{{ section.settings.eligible_3_title | default: "Items with original packaging" }}</strong>
              <span>{{ section.settings.eligible_3_text | default: "including boxes, labels, and documentation" }}</span>
            </div>
          </li>
          <li class="return-policy__list-item">
            <span class="return-policy__list-icon">‚úÖ</span>
            <div class="return-policy__list-content">
              <strong>{{ section.settings.eligible_4_title | default: "Products in perfect condition" }}</strong>
              <span>{{ section.settings.eligible_4_text | default: "without any damage or wear" }}</span>
            </div>
          </li>
        </ul>
      </section>

      <!-- Not Eligible for Return -->
      <section class="return-policy__section">
        <h2 class="return-policy__section-title">{{ section.settings.not_eligible_title | default: "Not Eligible for Return" }}</h2>
        <ul class="return-policy__list return-policy__list--not-eligible">
          <li class="return-policy__list-item">
            <span class="return-policy__list-icon">‚ùå</span>
            <div class="return-policy__list-content">
              <strong>{{ section.settings.not_eligible_1_title | default: "Opened or used perfumes" }}</strong>
              <span>{{ section.settings.not_eligible_1_text | default: "Once a fragrance seal is broken, it cannot be returned" }}</span>
            </div>
          </li>
          <li class="return-policy__list-item">
            <span class="return-policy__list-icon">‚ùå</span>
            <div class="return-policy__list-content">
              <strong>{{ section.settings.not_eligible_2_title | default: "Damaged packaging" }}</strong>
              <span>{{ section.settings.not_eligible_2_text | default: "Products with broken, damaged, or tampered packaging" }}</span>
            </div>
          </li>
          <li class="return-policy__list-item">
            <span class="return-policy__list-icon">‚ùå</span>
            <div class="return-policy__list-content">
              <strong>{{ section.settings.not_eligible_3_title | default: "Items past the 2-week window" }}</strong>
              <span>{{ section.settings.not_eligible_3_text | default: "Returns requested after 14 days from purchase" }}</span>
            </div>
          </li>
          <li class="return-policy__list-item">
            <span class="return-policy__list-icon">‚ùå</span>
            <div class="return-policy__list-content">
              <strong>{{ section.settings.not_eligible_4_title | default: "Sale or clearance items" }}</strong>
              <span>{{ section.settings.not_eligible_4_text | default: "Final sale products are not eligible for return" }}</span>
            </div>
          </li>
          <li class="return-policy__list-item">
            <span class="return-policy__list-icon">‚ùå</span>
            <div class="return-policy__list-content">
              <strong>{{ section.settings.not_eligible_5_title | default: "Personalized or custom orders" }}</strong>
              <span>{{ section.settings.not_eligible_5_text | default: "Items made specifically for you" }}</span>
            </div>
          </li>
        </ul>
      </section>

      <!-- How to Return -->
      <section class="return-policy__section">
        <h2 class="return-policy__section-title">{{ section.settings.how_to_title | default: "How to Return" }}</h2>
        <div class="return-policy__steps">
          <div class="return-policy__step">
            <div class="return-policy__step-number">1</div>
            <div class="return-policy__step-content">
              <h3 class="return-policy__step-title">{{ section.settings.step_1_title | default: "Contact Us" }}</h3>
              <p class="return-policy__step-text">{{ section.settings.step_1_text | default: "Email us or call within 14 days to initiate your return" }}</p>
            </div>
          </div>
          <div class="return-policy__step">
            <div class="return-policy__step-number">2</div>
            <div class="return-policy__step-content">
              <h3 class="return-policy__step-title">{{ section.settings.step_2_title | default: "Get Authorization" }}</h3>
              <p class="return-policy__step-text">{{ section.settings.step_2_text | default: "Receive return authorization and shipping instructions" }}</p>
            </div>
          </div>
          <div class="return-policy__step">
            <div class="return-policy__step-number">3</div>
            <div class="return-policy__step-content">
              <h3 class="return-policy__step-title">{{ section.settings.step_3_title | default: "Ship Back" }}</h3>
              <p class="return-policy__step-text">{{ section.settings.step_3_text | default: "Securely package and ship your item back to us" }}</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Important Notes -->
      <section class="return-policy__section return-policy__important">
        <h2 class="return-policy__section-title">{{ section.settings.important_title | default: "Important Notes" }}</h2>
        <div class="return-policy__notes">
          <div class="return-policy__note">
            <div class="return-policy__note-icon">‚ö†Ô∏è</div>
            <div class="return-policy__note-content">
              <strong>{{ section.settings.note_1_title | default: "Hygiene Reasons:" }}</strong>
              {{ section.settings.note_1_text | default: "Due to the personal nature of fragrances and hygiene considerations, we cannot accept returns of opened or used perfumes." }}
            </div>
          </div>
          <div class="return-policy__note">
            <div class="return-policy__note-icon">‚ö†Ô∏è</div>
            <div class="return-policy__note-content">
              <strong>{{ section.settings.note_2_title | default: "Inspection Required:" }}</strong>
              {{ section.settings.note_2_text | default: "All returned items will be inspected upon receipt. Items that don't meet our return criteria will be sent back to you." }}
            </div>
          </div>
          <div class="return-policy__note">
            <div class="return-policy__note-icon">‚ö†Ô∏è</div>
            <div class="return-policy__note-content">
              <strong>{{ section.settings.note_3_title | default: "Return Shipping:" }}</strong>
              {{ section.settings.note_3_text | default: "Customers are responsible for return shipping costs unless the item was damaged or defective upon arrival." }}
            </div>
          </div>
          <div class="return-policy__note">
            <div class="return-policy__note-icon">‚ö†Ô∏è</div>
            <div class="return-policy__note-content">
              <strong>{{ section.settings.note_4_title | default: "Refund Processing:" }}</strong>
              {{ section.settings.note_4_text | default: "Refunds will be processed within 5-7 business days after we receive and inspect your return." }}
            </div>
          </div>
        </div>
      </section>

      <!-- Exchanges -->
      <section class="return-policy__section">
        <h2 class="return-policy__section-title">{{ section.settings.exchanges_title | default: "Exchanges" }}</h2>
        <p class="return-policy__text">{{ section.settings.exchanges_text | default: "We offer exchanges for unopened items within the same 2-week window. If you'd like to exchange for a different fragrance:" }}</p>
        <ul class="return-policy__list return-policy__list--simple">
          <li>{{ section.settings.exchange_1 | default: "Contact our customer service team to discuss exchange options" }}</li>
          <li>{{ section.settings.exchange_2 | default: "Exchanges are subject to product availability" }}</li>
          <li>{{ section.settings.exchange_3 | default: "Price differences may apply for exchanges to higher-priced items" }}</li>
        </ul>
      </section>

      <!-- Need Help -->
      <section class="return-policy__section return-policy__help">
        <h2 class="return-policy__section-title">{{ section.settings.help_title | default: "Need Help?" }}</h2>
        <div class="return-policy__help-grid">
          <div class="return-policy__help-item">
            <h3 class="return-policy__help-item-title">{{ section.settings.help_1_title | default: "Customer Service" }}</h3>
            <p class="return-policy__help-item-text">{{ section.settings.help_1_text | default: "Have questions about your return? Our team is here to help." }}</p>
            <a href="{{ section.settings.contact_link | default: '/pages/contact' }}" class="btn btn--outline">
              {{ section.settings.contact_button_text | default: "Contact Us" }} ‚Üí
            </a>
          </div>
          <div class="return-policy__help-item">
            <h3 class="return-policy__help-item-title">{{ section.settings.help_2_title | default: "Order Information" }}</h3>
            <p class="return-policy__help-item-text">{{ section.settings.help_2_text | default: "Check your order status and tracking information." }}</p>
            <a href="{{ section.settings.orders_link | default: routes.account_url }}" class="btn btn--outline">
              {{ section.settings.orders_button_text | default: "View Orders" }} ‚Üí
            </a>
          </div>
        </div>
      </section>

      <!-- Custom Blocks for Additional Content -->
      {% for block in section.blocks %}
        {% if block.type == "text_block" %}
          <section class="return-policy__section return-policy__custom-block" {{ block.shopify_attributes }}>
            {% if block.settings.heading != blank %}
              <h2 class="return-policy__section-title">{{ block.settings.heading }}</h2>
            {% endif %}
            {% if block.settings.text != blank %}
              <div class="return-policy__custom-text">
                {{ block.settings.text | newline_to_br }}
              </div>
            {% endif %}
          </section>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
  .return-policy {
    background-color: #f8f9fa;
    min-height: 100vh;
  }

  .return-policy__hero {
    background: white;
    padding: 20px 20px 40px;
    border-bottom: 1px solid #e9ecef;
  }

  .return-policy__container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .return-policy__breadcrumb {
    margin-bottom: 20px;
  }

  .return-policy__back-link {
    color: #007bff;
    text-decoration: none;
    font-size: 0.875rem;
    display: inline-flex;
    align-items: center;
    gap: 4px;
  }

  .return-policy__back-link:hover {
    color: #0056b3;
    text-decoration: underline;
  }

  .return-policy__title {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 8px;
    line-height: 1.2;
    color: #2c3e50;
  }

  .return-policy__subtitle {
    font-size: 1rem;
    color: #6c757d;
    margin: 0;
    line-height: 1.4;
  }

  .return-policy__content {
    padding: 40px 0;
    background: white;
  }

  .return-policy__section {
    margin-bottom: 40px;
    padding: 0 40px;
  }

  .return-policy__section:last-child {
    margin-bottom: 0;
  }

  .return-policy__section-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 16px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .return-policy__section-title::before {
    content: "";
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: #28a745;
    flex-shrink: 0;
    position: relative;
  }

  .return-policy__section-title::after {
    content: "‚úì";
    position: absolute;
    left: 42px;
    margin-left: -16px;
    margin-top: -2px;
    color: white;
    font-size: 12px;
    font-weight: bold;
  }

  /* Different icons for different sections */
  .return-policy__section:first-of-type .return-policy__section-title::before {
    background: #ffc107;
  }

  .return-policy__section:first-of-type .return-policy__section-title::after {
    content: "üïí";
    font-size: 10px;
    margin-left: -14px;
  }

  .return-policy__text {
    font-size: 0.875rem;
    line-height: 1.6;
    color: #495057;
    margin-bottom: 20px;
  }

  /* Lists */
  .return-policy__list {
    list-style: none;
    padding: 0;
    margin: 0 0 0 20px;
  }

  .return-policy__list-item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    padding: 8px 0;
    margin-bottom: 8px;
    border: none;
    background: transparent;
  }

  .return-policy__list-item:hover {
    transform: none;
    box-shadow: none;
  }

  .return-policy__list-icon {
    font-size: 1rem;
    flex-shrink: 0;
    margin-top: 2px;
    display: none;
  }

  .return-policy__list-content {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .return-policy__list-content strong {
    color: #2c3e50;
    font-weight: 600;
    font-size: 0.875rem;
  }

  .return-policy__list-content span {
    color: #6c757d;
    font-size: 0.875rem;
  }

  .return-policy__list-item::before {
    content: "‚Ä¢";
    color: #6c757d;
    font-weight: bold;
    margin-right: 8px;
    flex-shrink: 0;
  }

  .return-policy__list--eligible .return-policy__list-item,
  .return-policy__list--not-eligible .return-policy__list-item {
    border-left: none;
  }

  .return-policy__list--simple {
    background: transparent;
    padding: 0;
    border-radius: 0;
    margin-left: 20px;
  }

  .return-policy__list--simple li {
    color: #495057;
    margin-bottom: 8px;
    padding-left: 16px;
    position: relative;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .return-policy__list--simple li:before {
    content: "‚Ä¢";
    color: #6c757d;
    font-weight: bold;
    position: absolute;
    left: 0;
  }

  /* Steps */
  .return-policy__steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    margin: 20px 0;
  }

  .return-policy__step {
    background: transparent;
    padding: 0;
    border-radius: 0;
    box-shadow: none;
    text-align: center;
    position: relative;
    transition: none;
  }

  .return-policy__step:hover {
    transform: none;
  }

  .return-policy__step-number {
    width: 40px;
    height: 40px;
    background: #f8f9fa;
    color: #2c3e50;
    border: 2px solid #dee2e6;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 auto 16px;
  }

  .return-policy__step-title {
    font-size: 1rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 8px;
  }

  .return-policy__step-text {
    color: #6c757d;
    line-height: 1.5;
    font-size: 0.875rem;
  }

  /* Important Notes */
  .return-policy__important {
    background: transparent;
    padding: 0;
    border-radius: 0;
    border: none;
  }

  .return-policy__important .return-policy__section-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 20px;
  }

  .return-policy__important .return-policy__section-title::before {
    display: none;
  }

  .return-policy__important .return-policy__section-title::after {
    display: none;
  }

  .return-policy__notes {
    display: grid;
    gap: 16px;
    margin-left: 0;
  }

  .return-policy__note {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    background: transparent;
    padding: 0;
    border-radius: 0;
  }

  .return-policy__note-icon {
    font-size: 1rem;
    flex-shrink: 0;
    color: #ffc107;
    margin-top: 2px;
  }

  .return-policy__note-content {
    color: #495057;
    line-height: 1.6;
    font-size: 0.875rem;
  }

  .return-policy__note-content strong {
    color: #2c3e50;
    font-weight: 600;
  }

  /* Help Section */
  .return-policy__help .return-policy__section-title::before,
  .return-policy__help .return-policy__section-title::after {
    display: none;
  }

  .return-policy__help-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
    margin-top: 20px;
  }

  .return-policy__help-item {
    background: transparent;
    padding: 0;
    border-radius: 0;
    box-shadow: none;
    text-align: left;
  }

  .return-policy__help-item-title {
    font-size: 1rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 8px;
  }

  .return-policy__help-item-text {
    color: #6c757d;
    margin-bottom: 12px;
    line-height: 1.5;
    font-size: 0.875rem;
  }

  /* Custom Content */
  .return-policy__custom-text {
    font-size: 0.875rem;
    line-height: 1.6;
    color: #495057;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 8px 16px;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.2s ease;
    cursor: pointer;
    border: 1px solid #007bff;
    background: #007bff;
    color: white;
  }

  .btn--outline {
    background-color: transparent;
    border: 1px solid #007bff;
    color: #007bff;
  }

  .btn--outline:hover {
    background-color: #007bff;
    color: white;
    transform: none;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .return-policy__hero {
      padding: 30px 15px 15px;
    }

    .return-policy__title {
      font-size: 1.75rem;
    }

    .return-policy__subtitle {
      font-size: 0.875rem;
    }

    .return-policy__content {
      padding: 30px 0;
    }

    .return-policy__section {
      margin-bottom: 30px;
      padding: 0 20px;
    }

    .return-policy__section-title {
      font-size: 1.125rem;
    }

    .return-policy__steps {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .return-policy__help-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .return-policy__list {
      margin-left: 15px;
    }

    .return-policy__container {
      padding: 0 15px;
    }
  }

  @media (max-width: 480px) {
    .return-policy__title {
      font-size: 1.5rem;
    }

    .return-policy__section-title {
      font-size: 1rem;
    }

    .return-policy__section {
      padding: 0 15px;
    }

    .return-policy__steps {
      gap: 20px;
    }

    .return-policy__list {
      margin-left: 10px;
    }
  }
{% endstylesheet %}

