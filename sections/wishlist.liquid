      document.querySelectorAll('.product-card__add-to-cart').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const button = e.target.closest('.product-card__add-to-cart');
          const variantId = button.dataset.variantId;
          if (variantId) {
