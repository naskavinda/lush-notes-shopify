  .product-card__description {
    font-size: 14px;
    color: #666;
    line-height: 1.5;
    margin: 0 0 8px;
  }

  .product-card__vendor {
    font-size: 12px;
    color: #999;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
