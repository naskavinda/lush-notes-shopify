<div class="about-us">
  <div class="about-us__content">
    <h1>{{ section.settings.title | default: "About Lush Notes" }}</h1>
    <p>{{ section.settings.description | default: "Crafting luxury fragrances that define your essence and elevate your presence." }}</p>
    
    {% for block in section.blocks %}
      {% if block.type == "text_block" %}
        <div {{ block.shopify_attributes }}>
          <h2>{{ block.settings.heading }}</h2>
          <p>{{ block.settings.text }}</p>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% stylesheet %}
.about-us {
  padding: 2rem 0;
}
.about-us__content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}
.about-us h1 {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}
.about-us h2 {
  font-size: 2rem;
  margin-bottom: 1rem;
}
{% endstylesheet %}

{% schema %}
{
  "name": "About Us",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "About Lush Notes"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Crafting luxury fragrances that define your essence and elevate your presence."
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Us"
    }
  ]
}
{% endschema %}
