    width: 100%;
  }

  .product-card--compact {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .product-card--compact .product-card__image {
    aspect-ratio: 1;
  }

  .product-card--compact .product-card__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 20px;
  }

  .product-card--compact .product-card__title {
    margin-bottom: 12px;
    flex: 1;
  }

  .product-card--compact .product-card__title a {
    font-size: 16px;
    font-weight: 600;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-card--compact .product-card__price {
    margin-bottom: 16px;
  }

  .product-card--compact .product-card__form {
    margin-top: auto;
  }

  .product-card--compact .product-card__add-to-cart {
    width: 100%;
    padding: 12px 16px;
    background: #333;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .product-card--compact .product-card__add-to-cart:hover:not(:disabled) {
    background: #ff6b35;
    transform: translateY(-1px);
  }

  .product-card--compact .product-card__add-to-cart:disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  .product-card--compact .product-card__wishlist {
    width: 32px;
    height: 32px;
  }

  .product-card--compact .product-card__wishlist svg {
    width: 16px;
    height: 16px;
  }

  .product-card--compact .product-card__badge {
    font-size: 11px;
    padding: 4px 8px;
  }

  /* Responsive design for People Also Bought */
  @media (max-width: 1024px) {
    .people-also-bought__products {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }
  }

  @media (max-width: 768px) {
    .people-also-bought {
      margin-top: 40px;
      padding: 32px 0;
    }

    .people-also-bought__container {
      padding: 0 16px;
    }

    .people-also-bought__title {
      font-size: 20px;
      margin-bottom: 24px;
    }

    .people-also-bought__products {
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 16px;
    }

    .product-card--compact .product-card__content {
      padding: 16px;
    }
  }

  @media (max-width: 480px) {
    .people-also-bought {
      margin-top: 32px;
      padding: 24px 0;
    }

    .people-also-bought__products {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 16px;
    }

    .people-also-bought__title {
      font-size: 18px;
      margin-bottom: 20px;
    }

    .product-card--compact .product-card__content {
      padding: 12px;
    }

    .product-card--compact .product-card__title a {
      font-size: 14px;
    }

    .product-card--compact .product-card__add-to-cart {
      padding: 10px 12px;
      font-size: 13px;
    }
  }
