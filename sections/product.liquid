    font-size: 18px;
    font-weight: 700;
    color: #333;
  }

  .related-product-card .original-price {
    font-size: 14px;
    color: #999;
    text-decoration: line-through;
  }

  .related-product-card .regular-price {
    font-size: 18px;
    font-weight: 700;
    color: #333;
  }

  .related-product-card .add-to-cart-btn {
    width: 100%;
    background: #333;
    color: #ffffff;
    border: none;
    padding: 12px 16px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin-top: auto;
  }

  .related-product-card .add-to-cart-btn:hover:not(:disabled) {
    background: #ff6b35;
    transform: translateY(-1px);
  }

  .related-product-card .add-to-cart-btn:disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  .related-product-card .add-to-cart-btn:disabled:hover {
    background: #ccc;
    transform: none;
  }

  @media (max-width: 1024px) {
    .related-products-grid {
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 20px;
    }
  }

  @media (max-width: 768px) {
    .people-also-bought {
      padding: 30px 0;
    }

    .people-also-bought .section-title {
      font-size: 1.5rem;
      margin-bottom: 24px;
    }

    .related-products-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 16px;
    }

    .related-product-card .product-info {
      padding: 16px;
    }

    .related-product-card .product-title {
      font-size: 14px;
      margin: 0 0 8px;
    }

    .related-product-card .product-description {
      font-size: 13px;
    }

    .related-product-card .product-price {
      margin-bottom: 12px;
    }

    .related-product-card .sale-price,
    .related-product-card .regular-price {
      font-size: 16px;
    }

    .related-product-card .add-to-cart-btn {
      padding: 10px 14px;
      font-size: 13px;
    }
  }

  @media (max-width: 480px) {
    .people-also-bought .container {
      padding: 0 16px;
    }

    .related-products-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .related-product-card .product-info {
      padding: 16px;
    }

    .related-product-card .product-title {
      font-size: 14px;
    }

    .related-product-card .product-description {
      font-size: 13px;
    }
  }
