      </section>

      <!-- Prohibited Uses -->
      <section class="terms-conditions__section">
        <h2 class="terms-conditions__section-title">
          <span class="terms-conditions__section-icon">üö´</span>
          {{ 'terms_conditions.prohibited.title' | t }}
        </h2>
        
        <p class="terms-conditions__text">{{ 'terms_conditions.prohibited.intro' | t }}</p>
        
        <div class="terms-conditions__prohibited-grid">
          <ul class="terms-conditions__list">
            <li>{{ 'terms_conditions.prohibited.laws' | t }}</li>
            <li>{{ 'terms_conditions.prohibited.malicious' | t }}</li>
            <li>{{ 'terms_conditions.prohibited.access' | t }}</li>
            <li>{{ 'terms_conditions.prohibited.interfering' | t }}</li>
          </ul>
          <ul class="terms-conditions__list">
            <li>{{ 'terms_conditions.prohibited.automated' | t }}</li>
            <li>{{ 'terms_conditions.prohibited.copying' | t }}</li>
            <li>{{ 'terms_conditions.prohibited.reselling' | t }}</li>
            <li>{{ 'terms_conditions.prohibited.fraudulent' | t }}</li>
          </ul>
        </div>
      </section>

      <!-- Intellectual Property -->
      <section class="terms-conditions__section">
        <h2 class="terms-conditions__section-title">
          <span class="terms-conditions__section-icon">¬©Ô∏è</span>
          {{ 'terms_conditions.ip.title' | t }}
        </h2>
        
        <p class="terms-conditions__text">{{ 'terms_conditions.ip.intro' | t }}</p>
        
        <div class="terms-conditions__ip-sections">
          <div class="terms-conditions__ip-item">
            <h4 class="terms-conditions__ip-subtitle">{{ 'terms_conditions.ip.rights.title' | t }}</h4>
            <p>{{ 'terms_conditions.ip.rights.desc' | t }}</p>
          </div>
          
          <div class="terms-conditions__ip-item">
            <h4 class="terms-conditions__ip-subtitle">{{ 'terms_conditions.ip.license.title' | t }}</h4>
            <p>{{ 'terms_conditions.ip.license.desc' | t }}</p>
          </div>
          
          <div class="terms-conditions__ip-item">
            <h4 class="terms-conditions__ip-subtitle">{{ 'terms_conditions.ip.restrictions.title' | t }}</h4>
            <p>{{ 'terms_conditions.ip.restrictions.desc' | t }}</p>
          </div>
        </div>
      </section>

      <!-- Disclaimers and Limitation of Liability -->
      <section class="terms-conditions__section">
        <h2 class="terms-conditions__section-title">
          <span class="terms-conditions__section-icon">‚ö†Ô∏è</span>
          {{ 'terms_conditions.disclaimers.title' | t }}
        </h2>
        
        <div class="terms-conditions__subsection">
          <h3 class="terms-conditions__subsection-title">{{ 'terms_conditions.disclaimers.warranty.title' | t }}</h3>
          <p class="terms-conditions__text">{{ 'terms_conditions.disclaimers.warranty.desc' | t }}</p>
        </div>

        <div class="terms-conditions__subsection">
          <h3 class="terms-conditions__subsection-title">{{ 'terms_conditions.disclaimers.liability.title' | t }}</h3>
          <p class="terms-conditions__text">{{ 'terms_conditions.disclaimers.liability.desc' | t }}</p>
        </div>

        <div class="terms-conditions__note">
          <p>{{ 'terms_conditions.disclaimers.note' | t }}</p>
        </div>
      </section>

      <!-- Indemnification -->
      <section class="terms-conditions__section">
        <h2 class="terms-conditions__section-title">
          <span class="terms-conditions__section-icon">üõ°Ô∏è</span>
          {{ 'terms_conditions.indemnification.title' | t }}
        </h2>
        
        <p class="terms-conditions__text">{{ 'terms_conditions.indemnification.desc' | t }}</p>
      </section>

      <!-- Governing Law -->
      <section class="terms-conditions__section">
        <h2 class="terms-conditions__section-title">
          <span class="terms-conditions__section-icon">‚öñÔ∏è</span>
          {{ 'terms_conditions.governing.title' | t }}
        </h2>
        
        <p class="terms-conditions__text">{{ 'terms_conditions.governing.law' | t }}</p>
        <p class="terms-conditions__text">{{ 'terms_conditions.governing.disputes' | t }}</p>
      </section>

      <!-- Changes to Terms -->
      <section class="terms-conditions__section">
        <h2 class="terms-conditions__section-title">
          <span class="terms-conditions__section-icon">üîÑ</span>
          {{ 'terms_conditions.changes.title' | t }}
        </h2>
        
        <p class="terms-conditions__text">{{ 'terms_conditions.changes.desc' | t }}</p>
      </section>

      <!-- Contact Information -->
      <section class="terms-conditions__section">
        <h2 class="terms-conditions__section-title">
          <span class="terms-conditions__section-icon">üìû</span>
          {{ 'terms_conditions.contact.title' | t }}
        </h2>
        
        <p class="terms-conditions__text">{{ 'terms_conditions.contact.intro' | t }}</p>
        
        <div class="terms-conditions__contact-info">
          <div class="terms-conditions__contact-item">
            <strong>{{ 'general.contact.email' | t }}:</strong>
            <a href="mailto:{{ section.settings.contact_email | default: 'lushnotes175@gmail.com' }}">{{ section.settings.contact_email | default: "lushnotes175@gmail.com" }}</a>
          </div>
          
          <div class="terms-conditions__contact-item">
            <strong>{{ 'general.contact.website' | t }}:</strong>
            <a href="{{ section.settings.contact_form_link | default: '/pages/contact' }}">{{ 'terms_conditions.contact.form' | t }}</a>
          </div>
          
          <div class="terms-conditions__contact-item">
            <strong>{{ 'terms_conditions.contact.response_label' | t }}:</strong>
            {{ 'terms_conditions.contact.response_time' | t }}
          </div>
        </div>
        
        <p class="terms-conditions__text">{{ 'terms_conditions.contact.acknowledgment' | t }}</p>
      </section>

      <!-- Custom Blocks for Additional Content -->
      {% for block in section.blocks %}
        {% if block.type == "text_block" %}
          <section class="terms-conditions__section terms-conditions__custom-block" {{ block.shopify_attributes }}>
            {% if block.settings.heading != blank %}
              <h2 class="terms-conditions__section-title">
                <span class="terms-conditions__section-icon">üìÑ</span>
                {{ block.settings.heading }}
              </h2>
            {% endif %}
            {% if block.settings.text != blank %}
              <div class="terms-conditions__custom-text">
                {{ block.settings.text | newline_to_br }}
              </div>
            {% endif %}
          </section>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
  .terms-conditions {
    background-color: #f8f9fa;
    min-height: 100vh;
  }

  .terms-conditions__container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .terms-conditions__content {
    padding: 40px 0;
    background: white;
    border-radius: 8px;
  }

  .terms-conditions__intro {
    margin-bottom: 40px;
    padding: 0 20px;
  }

  .terms-conditions__intro p {
    font-size: 1rem;
    line-height: 1.6;
    color: #495057;
    margin: 0;
  }

  .terms-conditions__last-updated {
    display: flex;
    align-items: center;
    gap: 12px;
    background: #e3f2fd;
    padding: 16px 20px;
    border-radius: 8px;
    margin: 0 20px 32px;
    border-left: 4px solid #2196f3;
  }

  .terms-conditions__updated-icon {
    font-size: 1.25rem;
  }

  .terms-conditions__updated-content {
    font-size: 0.875rem;
    color: #1565c0;
  }

  .terms-conditions__updated-content strong {
    color: #0d47a1;
  }

  .terms-conditions__section {
    margin-bottom: 50px;
    padding: 0 20px;
  }

  .terms-conditions__section:last-child {
    margin-bottom: 0;
  }

  .terms-conditions__section-title {
    font-size: 1.375rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .terms-conditions__section-icon {
    font-size: 1.25rem;
  }

  .terms-conditions__subsection {
    margin-bottom: 32px;
  }

  .terms-conditions__subsection:last-child {
    margin-bottom: 0;
  }

  .terms-conditions__subsection-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 12px;
  }

  .terms-conditions__text {
    font-size: 0.875rem;
    line-height: 1.6;
    color: #495057;
    margin-bottom: 20px;
  }

  .terms-conditions__list {
    list-style: none;
    padding: 0;
    margin: 0 0 0 16px;
  }

  .terms-conditions__list li {
    font-size: 0.875rem;
    line-height: 1.6;
    color: #495057;
    margin-bottom: 8px;
    padding-left: 16px;
    position: relative;
  }

  .terms-conditions__list li:before {
    content: "‚Ä¢";
    color: #6c757d;
    font-weight: bold;
    position: absolute;
    left: 0;
  }

  .terms-conditions__two-column {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    margin-top: 20px;
  }

  .terms-conditions__column {
    background: #f8f9fa;
    padding: 24px;
    border-radius: 8px;
  }

  .terms-conditions__returns-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
    margin: 20px 0;
  }

  .terms-conditions__return-item {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    border-top: 3px solid #2c3e50;
  }

  .terms-conditions__return-title {
    font-size: 1rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 8px;
  }

  .terms-conditions__return-text {
    font-size: 0.875rem;
    color: #495057;
    line-height: 1.5;
    margin: 0;
  }

  .terms-conditions__prohibited-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    margin-top: 20px;
  }

  .terms-conditions__ip-sections {
    margin-top: 20px;
  }

  .terms-conditions__ip-item {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 16px;
    border-left: 4px solid #2c3e50;
  }

  .terms-conditions__ip-item:last-child {
    margin-bottom: 0;
  }

  .terms-conditions__ip-subtitle {
    font-size: 1rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 8px;
  }

  .terms-conditions__ip-item p {
    font-size: 0.875rem;
    color: #495057;
    line-height: 1.5;
    margin: 0;
  }

  .terms-conditions__note {
    background: #fff3cd;
    border: 1px solid #ffeaa7;
    border-radius: 6px;
    padding: 16px;
    margin-top: 20px;
  }

  .terms-conditions__note p {
    font-size: 0.875rem;
    color: #856404;
    margin: 0;
    line-height: 1.5;
  }

  .terms-conditions__contact-info {
    background: #f8f9fa;
    padding: 24px;
    border-radius: 8px;
    margin: 20px 0;
  }

  .terms-conditions__contact-item {
    font-size: 0.875rem;
    color: #495057;
    margin-bottom: 12px;
    line-height: 1.5;
  }

  .terms-conditions__contact-item:last-child {
    margin-bottom: 0;
  }

  .terms-conditions__contact-item strong {
    color: #2c3e50;
    display: inline-block;
    min-width: 120px;
  }

  .terms-conditions__contact-item a {
    color: #007bff;
    text-decoration: none;
  }

  .terms-conditions__contact-item a:hover {
    color: #0056b3;
    text-decoration: underline;
  }

  .terms-conditions__custom-text {
    font-size: 0.875rem;
    line-height: 1.6;
    color: #495057;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .terms-conditions__content {
      padding: 30px 0;
    }

    .terms-conditions__section {
      margin-bottom: 40px;
      padding: 0 15px;
    }

    .terms-conditions__container {
      padding: 0 15px;
    }

    .terms-conditions__two-column,
    .terms-conditions__prohibited-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .terms-conditions__returns-info {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .terms-conditions__last-updated {
      margin: 0 15px 32px;
    }

    .terms-conditions__intro {
      padding: 0 15px;
    }
  }

  @media (max-width: 480px) {
    .terms-conditions__section-title {
      font-size: 1.25rem;
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }

    .terms-conditions__column,
    .terms-conditions__return-item,
    .terms-conditions__ip-item,
    .terms-conditions__contact-info {
      padding: 20px;
    }

    .terms-conditions__list {
      margin-left: 12px;
    }
  }
{% endstylesheet %}

