{% comment %}
  Terms and Conditions Section
  Displays comprehensive terms and conditions content with proper formatting
{% endcomment %}

<div class="terms-conditions">
  <div class="terms-conditions__container">
    <div class="terms-conditions__content">
      {% if section.settings.show_intro %}
        <div class="terms-conditions__intro">
          <p>{{ section.settings.intro_text }}</p>
        </div>
      {% endif %}

      <!-- Last Updated -->
      <div class="terms-conditions__last-updated">
        <div class="terms-conditions__updated-icon">üìÖ</div>
        <div class="terms-conditions__updated-content">
          <strong>{{ section.settings.last_updated_label | default: "Last updated:" }}</strong>
          {{ section.settings.last_updated_date | default: "September 24, 2025" }}
        </div>
      </div>

      <!-- Acceptance of Terms -->
      <section class="terms-conditions__section">
        <h2 class="terms-conditions__section-title">
          <span class="terms-conditions__section-icon">‚úÖ</span>
          {{ 'terms_conditions.acceptance.title' | t }}
        </h2>
        
        <p class="terms-conditions__text">{{ 'terms_conditions.acceptance.intro' | t }}</p>
        
        <ul class="terms-conditions__list">
          <li>{{ 'terms_conditions.acceptance.age' | t }}</li>
          <li>{{ 'terms_conditions.acceptance.accurate' | t }}</li>
          <li>{{ 'terms_conditions.acceptance.security' | t }}</li>
        </ul>
      </section>

      <!-- User Accounts -->
      <section class="terms-conditions__section">
        <h2 class="terms-conditions__section-title">
          <span class="terms-conditions__section-icon">üë§</span>
          {{ 'terms_conditions.accounts.title' | t }}
        </h2>
        
        <div class="terms-conditions__subsection">
          <h3 class="terms-conditions__subsection-title">{{ 'terms_conditions.accounts.registration.title' | t }}</h3>
          <ul class="terms-conditions__list">
            <li>{{ 'terms_conditions.accounts.registration.create' | t }}</li>
            <li>{{ 'terms_conditions.accounts.registration.responsible' | t }}</li>
            <li>{{ 'terms_conditions.accounts.registration.notify' | t }}</li>
            <li>{{ 'terms_conditions.accounts.registration.suspend' | t }}</li>
