  }

  .cart-drawer__subtotal {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
  }

  .cart-drawer__subtotal-label {
    font-size: 1rem;
    font-weight: 500;
    color: #111827;
  }

