  @media (max-width: 640px) {
    .cart-drawer__content {
      max-width: 100%;
    }

    .cart-drawer__item {
      grid-template-columns: 60px 1fr auto;
      grid-template-rows: auto auto;
    }

    .cart-drawer__item-image {
